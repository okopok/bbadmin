<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Всем привет!{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="">
        <meta name="author" content="">
        {% block stylesheets %}
            <link href="{{ asset('bundles/system/bootstrap/css/bootstrap.min.css') }}" type="text/css" rel="stylesheet" />
            <style>
                body {
                    padding-top: 60px; /* 60px to make the container go all the way to the bottom of the topbar */
                }
            </style>
            <link href="{{ asset('bundles/system/bootstrap/css/bootstrap-responsive.min.css') }}" type="text/css" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block topbar %}
        <div class="navbar navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="brand" href="/">БольшаяАдминка</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="/adminer.php" target="_blank">adminer</a><span class="glyphicon glyphicon-new-window" aria-hidden="true"></span></li>

                            {#<li><a href="/settings">Настройки</a></li>#}
                            {#<li><a href="/about">About</a></li>#}
                            {#<li><a href="/contacts">Contact</a></li>#}

                            {#<a href="{{ url('_system_homepage', {'name': 'asdasd'}) }}">Home</a>#}

                            <li class="active" ><a href="{{ path('_system_homepage', {'name': 'user'}) }}">/hello/{user}</a></li>
                            {% include ':default:user.menu.html.twig'%}
                            {% include ':default:groups.menu.html.twig'%}

                            <li><a href="{{ path('_security') }}">Secur</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        {% endblock %}

        {% block body %}
        <div class="container">
            {% block body_data %}
            <h1>Bootstrap starter template</h1>
            <p>Use this document as a way to quick start any new project.<br> All you get is this message and a barebones HTML document.</p>
            {% endblock %}
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('bundles/system/js/jquery-2.1.3.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('bundles/system/bootstrap/js/bootstrap.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>
